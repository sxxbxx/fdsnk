<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tv_des_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="키"
             />


        <EditText
            android:id="@+id/et_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_des_title" />

        <TextView
            android:id="@+id/tv_des_weight"
            android:layout_width="77dp"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="몸무게"
             />

        <EditText
            android:id="@+id/et_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_des_muscle"
            android:layout_width="77dp"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="근격골량"
            />

        <EditText
            android:id="@+id/et_muscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_des_fat"
            android:layout_width="77dp"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="체지방량"
            />

        <EditText
            android:id="@+id/et_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            />



        <Button
            android:id="@+id/bt_okbody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="36dp"
            android:text="확인"
             />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>